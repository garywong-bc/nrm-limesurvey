{
    "name": "bcgov/nrm-limesurvey",
    "description": "NRM LimeSurvey customized for OpenShift",
    "type": "project",  
    "require-dev": {
        "composer/composer":"2.*",
        "overtrue/phplint": "2.*",
        "phpspec/prophecy": "1.*",
        "phpunit/phpunit":  "9.*",
        "squizlabs/php_codesniffer": "3.*"
    },
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "Bcgov\\NrmLimesurvey\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Gary Wong",
            "email": "Gary.T.Wong@gov.bc.ca"
        }
    ],
    "minimum-stability": "dev",
    "require": {},
    "scripts": {
        "lint":  "phplint --no-cache src/",
        "phpcs": "phpcs --extensions=php --standard=PSR12 src/",
        "phpcbf":"phpcbf --standard=PSR12 src/",
        "test":  "phpunit tests/"
    }    
}
